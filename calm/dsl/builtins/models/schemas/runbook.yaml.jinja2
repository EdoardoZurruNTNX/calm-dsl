{% macro Runbook() -%}
title: Runbook
type: object
x-calm-dsl-type: app_runbook
properties:
  name:
    type: string
  description:
    type: string
  main_task_local_reference:
    $ref: '#/components/schemas/Ref'
  task_definition_list:
    x-calm-dsl-display-name: tasks
    type: array
    items:
      $ref: "#/components/schemas/Task"
  variable_list:
    x-calm-dsl-display-name: variables
    type: array
    items:
      $ref: '#/components/schemas/Variable'
  output_variables:
    x-calm-dsl-display-name: outputs
    type: array
    items:
      type: string

{%- endmacro %}


{% macro RunbookSchema() -%}

Runbook:
  {{ Runbook()|indent(2) }}

{%- endmacro %}
