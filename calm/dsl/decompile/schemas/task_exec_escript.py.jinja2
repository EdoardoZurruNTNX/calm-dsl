{%- macro task_class(obj) -%}
{%- if obj.calm_var_task %}CalmVarTask{%- else %}CalmTask{%- endif %}
{%- endmacro %}

{%- macro exec_escript_task(obj) -%}
{%- if obj.cred is not defined and obj.target is not defined %}
{{ task_class(obj) }}.Exec.escript.py2(name='{{obj.name}}', filename={{obj.attrs.script_file}} {%- if obj.attrs.tunnel_reference%}, tunnel=Ref.Tunnel(name="{{ obj.attrs.tunnel_reference.name }}"){%- endif %})
{%- elif obj.cred is not defined %}
{{ task_class(obj) }}.Exec.escript.py2(name='{{obj.name}}', filename={{obj.attrs.script_file}}, target={{obj.target}} {%- if obj.attrs.tunnel_reference%}, tunnel=Ref.Tunnel(name="{{ obj.attrs.tunnel_reference.name }}"){%- endif %})
{%- elif obj.target is not defined %}
{{ task_class(obj) }}.Exec.escript.py2(name='{{obj.name}}', filename={{obj.attrs.script_file}}, cred={{obj.cred}} {%- if obj.attrs.tunnel_reference%}, tunnel=Ref.Tunnel(name="{{ obj.attrs.tunnel_reference.name }}"){%- endif %})
{%- else %}
{{ task_class(obj) }}.Exec.escript.py2(name='{{obj.name}}', filename={{obj.attrs.script_file}}, cred={{obj.cred}}, target={{obj.target}} {%- if obj.attrs.tunnel_reference%}, tunnel=Ref.Tunnel(name="{{ obj.attrs.tunnel_reference.name }}"){%- endif %})
{%- endif %}
{%- endmacro %}

{{ exec_escript_task(obj) }}
