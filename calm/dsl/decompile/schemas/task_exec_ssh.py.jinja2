{%- macro common_details(obj) -%}
name='{{obj.name}}', filename={{obj.attrs.script_file}} {%- if obj.attrs.ip %}, ip='{{obj.attrs.ip}}'{%- endif %} {%- if obj.attrs.port %}, port={{obj.attrs.port}}{%- endif %} {%- if obj.target_endpoint %}, target_endpoint={{obj.target_endpoint}} {%- endif %}
{%- endmacro %}

{%- macro exec_ssh_task(obj) -%}
{%- if obj.cred is not defined and obj.target is not defined %}
CalmTask.Exec.ssh({{ common_details(obj) }})
{%- elif obj.cred is not defined %}
CalmTask.Exec.ssh({{ common_details(obj) }}, target={{obj.target}})
{%- elif obj.target is not defined %}
CalmTask.Exec.ssh({{ common_details(obj) }}, cred={{obj.cred}})
{%- else %}
CalmTask.Exec.ssh({{ common_details(obj) }}, cred={{obj.cred}}, target={{obj.target}})
{%- endif %}
{%- endmacro %}

{{ exec_ssh_task(obj) }}
